{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/_components/*": ["./src/app/(common)/_components/*"],
      "@/type/*": ["./src/app/(common)/types/*"],
      "@/hook/*": ["./src/app/hooks/*"],
      "@/data/*": ["./src/app/(common)/data/*"],
      "@/*": ["./src/*"],
      "@/sanity/*": ["./sanity/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
